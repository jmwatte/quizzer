{
  "category": "Hiding and Showing Panes in VSCode",
  "shortcuts": [
    {
      "action": "Toggle Sidebar Visibility",
      "shortcut": "Ctrl+B",
      "note": "Show or hide the sidebar"
    },
    {
      "action": "Toggle Panel Visibility",
      "shortcut": "Ctrl+J",
      "note": "Show or hide the panel (output, debug console, terminal, etc.)"
    },
    {
      "action": "Toggle Integrated Terminal",
      "shortcut": "Ctrl+`",
      "note": "Show or hide the integrated terminal"
    },
    {
      "action": "Toggle Full Screen",
      "shortcut": "F11",
      "note": "Switch between full screen and normal mode"
    },
    {
      "action": "Toggle Zen Mode",
      "shortcut": "Ctrl+K Z",
      "note": "Switch between Zen Mode (distraction free mode) and normal mode"
    },
    {
      "action": "Focus on Editor Group",
      "shortcut": "Ctrl+1 / Ctrl+2 / Ctrl+3",
      "note": "Focus on the first, second, or third editor group"
    },
    {
      "action": "Focus on Sidebar",
      "shortcut": "Ctrl+0",
      "note": "Focus on the sidebar"
    }
  ]
}